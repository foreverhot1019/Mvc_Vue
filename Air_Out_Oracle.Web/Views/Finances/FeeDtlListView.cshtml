@model AirOut.Web.Models.Finance
<table id="finance_dtl_datagrid" class="easyui-datagrid" title="费用明细" style="width:auto; height:auto;min-height:100px; max-height:358px;"
       data-options="
	   rownumbers:true,
	   checkOnSelect:false,
	   selectOnCheck:false,
	   idField:'Id',
	   sortName:'Id',
	   sortOrder:'desc',
	   remoteFilter: true,
	   singleSelect: false,
	   toolbar: '#finance_dtl_toolbar',
	   //url: '/Finances/GetData',
	   //onClickCell: onClickCell,
       //onBeginEdit:onBeginEdit,
	   //onSelect:onSelect,
       //showFooter:true,
	   pagination: 'true'">
    <thead>
        <tr>
            <th data-options="field:'ck',checkbox:true"></th>
            <th data-options="field:'Dzbh',width:80,sortable:true,resizable:true,
			editor:{
				type:'textbox',
				options:{
					required:false,
                    validType:'length[0,50]'
				}
			}">@Html.DisplayNameFor(model => model.Dzbh)</th>
            <th data-options="field:'Line_No',width:60,align:'right',sortable:true,resizable:true,
			editor:{
				type:'numberbox',
				options:{
					required:true,
                    precision:0
				}
			}">@Html.DisplayNameFor(model => model.Line_No)</th>
            <th data-options="field:'Line_Id',width:80,align:'right',sortable:true,resizable:true,
			editor:{
				type:'numberbox',
				options:{
					required:true,
                    precision:0
				}
			}">费用序号</th>
            <th data-options="field:'Bill_Object_Id',width:80,sortable:true,resizable:true,
            editor:{
            	type:'textbox',
            	options:{
            		required:false,
                    validType:'length[0,50]'
            	}
            }">结算方</th>
            <th data-options="field:'Bill_Object_Name',width:160,sortable:true,resizable:true,
            editor:{
            	type:'textbox',
            	options:{
            		required:false,
                    validType:'length[0,20]'
            	}
            }">结算方名称</th>
            <th data-options="field:'Bill_Type',width:75,sortable:true,resizable:true,
            editor:{
            	type:'textbox',
            	options:{
            		required:false,
                    validType:'length[0,20]'
            	}
            }">@Html.DisplayNameFor(model => model.Bill_Type)</th>
            <th data-options="field:'Money_Code',width:70,sortable:true,resizable:true,
            formatter:joinformatter,
            editor:{
            	type:'combogrid',
            	options:{
            		required:false,
                    validType:'length[0,20]'
            	}
            }">@Html.DisplayNameFor(model => model.Money_Code)</th>
            <th data-options="field:'Charge_Code',width:80,sortable:true,resizable:true,
			editor:{
				type:'textbox',
				options:{
					required:false,
                    validType:'length[0,50]'
				}
			}">费用代码</th>
            <th data-options="field:'Charge_Desc',width:80,sortable:true,resizable:true,
			editor:{
				type:'textbox',
				options:{
					required:false,
                    validType:'length[0,100]'
				}
			}">费用名称</th>
            <th data-options="field:'Unitprice2',width:80,align:'right',sortable:true,resizable:true,
			editor:{
				type:'numberbox',
				options:{
					required:true,
                    precision:2
				}
			}">实际单价</th>
            <th data-options="field:'Qty',width:60,align:'right',sortable:true,resizable:true,
			editor:{
				type:'numberbox',
				options:{
					required:true,
                    precision:2
				}
			}">数量</th>
            <th data-options="field:'Account2',width:80,align:'right',sortable:true,resizable:true,
			editor:{
				type:'numberbox',
				options:{
					required:true,
                    precision:2
				}
			}">实际金额</th>
            <th data-options="field:'Bill_HasTax',width:80,align:'right',sortable:true,resizable:true,
            formatter:boolformatter,
            editor:{
            	type:'combogrid',
            	options:{
            		required:true,
                    precision:0
            	}
            }">@Html.DisplayNameFor(model => model.Bill_HasTax)</th>
            <th data-options="field:'Bill_TaxRate',width:80,align:'right',sortable:true,resizable:true,
            editor:{
                type:'numberbox',
                options:{
                    required:true,
                    precision:2
                }
            }">@Html.DisplayNameFor(model => model.Bill_TaxRate)</th>
            <th data-options="field:'Bill_Amount',width:80,align:'right',sortable:true,resizable:true,
            editor:{
                type:'numberbox',
                options:{
                    required:true,
                    precision:2
                }
            }">@Html.DisplayNameFor(model => model.Bill_Amount)</th>
            <th data-options="field:'Bill_TaxAmount',width:80,align:'right',sortable:true,resizable:true,
            editor:{
                type:'numberbox',
                options:{
                    required:true,
                    precision:2
                }
            }">@Html.DisplayNameFor(model => model.Bill_TaxAmount)</th>
            <th data-options="field:'Bill_AmountTaxTotal',width:80,align:'right',sortable:true,resizable:true,
            editor:{
                type:'numberbox',
                options:{
                    required:true,
                    precision:2
                }
            }">@Html.DisplayNameFor(model => model.Bill_AmountTaxTotal)</th>
            <th data-options="field:'Summary',width:140,sortable:true,resizable:true,
			editor:{
				type:'textbox',
				options:{
					required:false,
                    validType:'length[0,100]'
				}
			}">摘要</th>
            <th data-options="field:'Create_Status',width:80,sortable:true,resizable:true,
            formatter:function(value, row, index){return formatterByEnumArray(value, row, index, ArrBms_BillCreate_Status);},
            editor:{
            	type:'combogrid',
            	options:{
            		required:false
            	}
            }">@Html.DisplayNameFor(model => model.Create_Status)</th>
            <th data-options="field:'ADDWHO',width:80,sortable:true,resizable:true,
            formatter:joinformatter,
            editor:{
                type:'textbox',
                options:{
                    required:false ,validType:'length[0,20]'
                }
            }">@Html.DisplayNameFor(model => model.ADDWHO)</th>
            <th data-options="field:'ADDTS',width:120,align:'right',sortable:true,resizable:true,
            formatter:datetimeformatter,
            editor:{
                type:'datetimebox',
                options:{
                    required:false
                }
            }">@Html.DisplayNameFor(model => model.ADDTS)</th>
            <th data-options="field:'BillEDITWHO',width:80,sortable:true,resizable:true,
            formatter:joinformatter,
            editor:{
                type:'textbox',
                options:{
                    required:false,
                    validType:'length[0,20]'
                }
            }">@Html.DisplayNameFor(model => model.BillEDITWHO)</th>
            <th data-options="field:'BillEDITTS',width:120,align:'right',sortable:true,resizable:true,
            formatter:datetimeformatter,
            editor:{
                type:'datetimebox',
                options:{
                    required:false
                }
            }">@Html.DisplayNameFor(model => model.BillEDITTS)</th>
        </tr>
    </thead>
</table>