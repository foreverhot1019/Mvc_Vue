@model DateTime?
<div class="input-group date"  >
    @Html.TextBox("", Model, null, new { @class = "form-control" })<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
</div>
<script>
    $(document).ready(function (e) {
        $('#@Html.IdFor(m => m)').datepicker({
            format: "yyyy/mm/dd",
            language: "zh-CN",
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true
        });
    })
 </script>
