
@{
    ViewBag.Title = "Index33";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    var Num = 1;
}

<script src="~/Scripts/jsext.js"></script>

<script type="text/javascript">
    var i = 0, editIndex = undefined;
    var dg1;
    $(document).ready(function () {

    });   

    function append1() {
        dg1 = $('#表头信息_table');
        rowindex = i++;
        dg1.datagrid('appendRow', {
            报关单号: '报关单号' + rowindex,
            进出标志: '进出标志' + rowindex,
            申报日期: '申报日期' + rowindex,
            贸易方式: '贸易方式' + rowindex,
            锁定: '锁定' + rowindex,
            状态: '状态' + rowindex,
        });
    }

    function removeit1() {
        dg1 = $('#表头信息_table');
        if (editIndex == undefined) { return };
        dg1.datagrid('cancelEdit', editIndex).datagrid('deleteRow', editIndex);
        editIndex = undefined;
    }

    function append2() {
        dg1 = $('#表体信息_table');
        rowindex = i++;
        dg1.datagrid('appendRow', {
            报关单号: '报关单号' + rowindex,
            进出标志: '进出标志' + rowindex,
            申报日期: '申报日期' + rowindex,
            贸易方式: '贸易方式' + rowindex,
            锁定: '锁定' + rowindex,
            状态: '状态' + rowindex,
        });
    }

    function removeit2() {
        dg1 = $('#表体信息_table');
        if (editIndex == undefined) { return };
        dg1.datagrid('cancelEdit', editIndex).datagrid('deleteRow', editIndex);
        editIndex = undefined;
    }

    function endEditing() {
        if (editIndex == undefined) { return true }
        if (dg1.datagrid('validateRow', editIndex)) {
            dg1.datagrid('endEdit', editIndex);
            editIndex = undefined;
            return true;
        } else {
            return false;
        }
    }

    function onClickCell1(index, field) {
        dg1 = $('#表头信息_table');
        var _operates = ["_operate1", "_operate2", "_operate3", "ck"]
        if ($.inArray(field, _operates) >= 0) {
            return;
        }
        if (editIndex != index) {
            if (endEditing()) {
                dg1.datagrid('selectRow', index)
                        .datagrid('beginEdit', index);
                var ed = dg1.datagrid('getEditor', { index: index, field: field });
                if (ed) {
                    ($(ed.target).data('textbox') ? $(ed.target).textbox('textbox') : $(ed.target)).focus();
                }
                editIndex = index;
            } else {
                dg1.datagrid('selectRow', editIndex);
            }
        }
    }

    function onClickCell2(index, field) {
        dg1 = $('#表体信息_table');
        var _operates = ["_operate1", "_operate2", "_operate3", "ck"]
        if ($.inArray(field, _operates) >= 0) {
            return;
        }
        if (editIndex != index) {
            if (endEditing()) {
                dg1.datagrid('selectRow', index)
                        .datagrid('beginEdit', index);
                var ed = dg1.datagrid('getEditor', { index: index, field: field });
                if (ed) {
                    ($(ed.target).data('textbox') ? $(ed.target).textbox('textbox') : $(ed.target)).focus();
                }
                editIndex = index;
            } else {
                dg1.datagrid('selectRow', editIndex);
            }
        }
    }

</script>

